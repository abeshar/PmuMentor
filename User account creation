using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Mentor
{
    internal class Program
    {
        static void Main(string[] args)
        {
            // Display header
            Console.WriteLine("Welcome to the Account Creation System");
            Console.WriteLine("--------------------------------------");

            // Get user input for account creation
            Console.Write("Enter your username: ");
            string username = Console.ReadLine();

            Console.Write("Enter your password: ");
            string password = Console.ReadLine();

            Console.Write("Enter your email address: ");
            string email = Console.ReadLine();

            // Validation checks
            if (string.IsNullOrEmpty(username) || string.IsNullOrEmpty(password) || string.IsNullOrEmpty(email))
            {
                Console.WriteLine("Error: All fields are required!");
            }
            else if (!email.Contains("@") || !email.Contains("."))
            {
                Console.WriteLine("Error: Invalid email format.");
            }
            else if (password.Length < 6)
            {
                Console.WriteLine("Error: Password must be at least 6 characters long.");
            }
            else
            {
                // Account creation successful
                Console.WriteLine("Account successfully created!");
                Console.WriteLine("Username: " + username);
                Console.WriteLine("Email: " + email);
                // You can add code here to save the user data (e.g., to a file or database)
            }

            // Keep the console window open
            Console.ReadLine();
        }
    }
  }
