import java.io.*;
import java.util.Scanner;

public class UserAccountCreation {

    public static void createUserAccount() {
        Scanner scanner = new Scanner(System.in);
        String usersDb = "users.txt";

        // Get the username
        System.out.print("Enter a username: ");
        String username = scanner.nextLine().trim();

        // Check if the user already exists
        try {
            BufferedReader reader = new BufferedReader(new FileReader(usersDb));
            String line;
            while ((line = reader.readLine()) != null) {
                String[] user = line.split(",");
                if (user[0].equals(username)) {
                    System.out.println("Username already taken. Please try another one.");
                    reader.close();
                    return;
                }
            }
            reader.close();
        } catch (IOException e) {
            System.out.println("Error reading users database.");
        }

        // Get the password
        System.out.print("Enter a password: ");
        String password = scanner.nextLine().trim();

        // Store the username and password in the users file
        try {
            BufferedWriter writer = new BufferedWriter(new FileWriter(usersDb, true));
            writer.write(username + "," + password + "\n");
            writer.close();
            System.out.println("Account created successfully!");
        } catch (IOException e) {
            System.out.println("Error writing to users database.");
        }
    }

    public static void main(String[] args) {
        createUserAccount();
    }
}
